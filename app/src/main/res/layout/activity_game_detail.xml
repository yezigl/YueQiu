<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebar"
        style="@style/TitleBar">

        <ImageView
            android:id="@+id/back"
            style="@style/TitleBarLeft"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/TitleBarTitle"
            android:text="@string/game_detail_title" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:flipInterval="5000"
        android:inAnimation="@anim/slide_in"
        android:outAnimation="@anim/slide_out"
        android:persistentDrawingCache="animation" />

    <com.yueqiu.widget.IcsLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewflipper"
        android:divider="@drawable/line_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_56dp"
            android:paddingLeft="@dimen/padding_primary"
            android:paddingRight="@dimen/padding_primary">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_base"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableTop="@android:drawable/ic_menu_share"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/text_lighter"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_base"
                android:layout_toLeftOf="@id/share"
                android:drawableTop="@android:drawable/ic_menu_compass"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/text_lighter"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout style="@style/FormGroup">

            <TextView
                android:id="@+id/address"
                style="@style/FormControl"
                android:drawableLeft="@android:drawable/ic_menu_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="查看地图"
                android:textColor="@color/text_theme"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout style="@style/FormGroup">

            <TextView
                android:id="@+id/date"
                style="@style/FormControl"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar" />
        </RelativeLayout>

        <RelativeLayout style="@style/FormGroup">

            <TextView
                android:id="@+id/number"
                style="@style/FormControl"
                android:drawableLeft="@android:drawable/ic_menu_add" />
        </RelativeLayout>

        <RelativeLayout style="@style/FormGroup">

            <TextView
                style="@style/FormControl"
                android:drawableLeft="@android:drawable/ic_menu_add" />

            <TextView
                android:id="@+id/organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="查看地图"
                android:textColor="@color/text_theme"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout style="@style/FormGroup">

            <TextView
                android:id="@+id/partner"
                style="@style/FormControl"
                android:drawableLeft="@android:drawable/ic_menu_add" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@android:drawable/ic_menu_more" />

            <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="gone" />-->

        </RelativeLayout>

    </com.yueqiu.widget.IcsLinearLayout>

    <LinearLayout
        android:id="@+id/layout_signup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_56dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/signed"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:gravity="center"
            android:text="@string/game_signed"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@color/bg_theme"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/game_signup"
            android:textColor="@color/text_white"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        style="@style/Divider.Horizontal"
        android:layout_above="@id/layout_signup" />

</RelativeLayout>