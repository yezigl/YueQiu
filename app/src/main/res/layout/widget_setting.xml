<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/dividerHeader"
        style="@style/Divider.Horizontal"
        android:visibility="gone" />

    <RelativeLayout style="@style/MoreItemRL">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/mtsetting_icon_size"
            android:layout_height="@dimen/mtsetting_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mtsetting_icon_marginRight"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/title"
            style="@style/MoreItemText" />

        <ImageView
            android:id="@+id/more"
            style="@style/MoreItemArrow"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/more"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/toggle"
            style="@style/ToggleButton"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/dividerFooter"
        style="@style/Divider.Horizontal" />

</LinearLayout>