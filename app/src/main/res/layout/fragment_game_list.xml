<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/location"
            style="@style/TitleBarLeft" />

        <TextView
            style="@style/TitleBarTitle"
            android:text="@string/app_name" />

    </RelativeLayout>

    <com.yueqiu.widget.IcsLinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_white"
        android:divider="@drawable/line_divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.yueqiu.widget.DropdownView
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_base"
            android:singleLine="true"
            android:text="今天"
            android:textColor="@color/dropdown_text"
            android:textSize="@dimen/dropdown_title_textSize" />

        <com.yueqiu.widget.DropdownView
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_base"
            android:singleLine="true"
            android:text="全部"
            android:textColor="@color/dropdown_text"
            android:textSize="@dimen/dropdown_title_textSize" />

        <com.yueqiu.widget.DropdownView
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_base"
            android:singleLine="true"
            android:text="最新"
            android:textColor="@color/dropdown_text"
            android:textSize="@dimen/dropdown_title_textSize" />

    </com.yueqiu.widget.IcsLinearLayout>

    <View style="@style/Divider.Horizontal" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layout_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list"
            style="@style/List"
            android:divider="@null"
            android:dividerHeight="@dimen/padding_base" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>