<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/theme_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/theme_primaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/theme_primary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TitleBarLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingBottom">@dimen/titlebar_func_paddingTop</item>
        <item name="android:paddingLeft">@dimen/padding_primary</item>
        <item name="android:paddingRight">@dimen/padding_primary</item>
        <item name="android:paddingTop">@dimen/titlebar_func_paddingTop</item>
        <item name="android:textSize">@dimen/titlebar_func_textSize</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TitleBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/titlebar_title_textSize</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/titlebar_title_margin</item>
        <item name="android:layout_marginRight">@dimen/titlebar_title_margin</item>
    </style>

    <style name="TitleBarRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:textSize">@dimen/titlebar_func_textSize</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:paddingBottom">@dimen/titlebar_func_paddingTop</item>
        <item name="android:paddingLeft">@dimen/padding_primary</item>
        <item name="android:paddingRight">@dimen/padding_primary</item>
        <item name="android:paddingTop">@dimen/titlebar_func_paddingTop</item>
    </style>

    <style name="Divider"></style>

    <!-- 水平分割线 实线 -->
    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <!-- 垂直分割线 实线 -->
    <style name="Divider.Vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <!-- ListView样式，带分割线 -->
    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/bg_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Large" parent="Button">
        <item name="android:background">@drawable/button_large_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/button_large_textSize</item>
    </style>

    <!-- 大按钮蓝色，默认match_parent/44dp -->
    <style name="Button.Large.Blue">
        <item name="android:background">@drawable/button_large_blue</item>
    </style>

    <!-- 大按钮橘色，默认match_parent/44dp -->
    <style name="Button.Large.Orange">
        <item name="android:background">@drawable/button_large_orange</item>
    </style>

    <!-- 大按钮灰色，默认match_parent/44dp -->
    <style name="Button.Large.Gray">
        <item name="android:background">@drawable/button_large_gray</item>
        <item name="android:textColor">@color/button_large_gray_text</item>
    </style>

    <style name="Button.Small">
        <item name="android:textSize">@dimen/button_small_textSize</item>
    </style>

    <!-- 小按钮蓝色，默认wrap_content/30dp -->
    <style name="Button.Small.Blue">
        <item name="android:background">@drawable/button_small_blue</item>
        <item name="android:textColor">@color/button_small_blue_text</item>
    </style>

    <!-- 小按钮蓝色，默认wrap_content/30dp -->
    <style name="Button.Small.Orange">
        <item name="android:background">@drawable/button_small_orange</item>
        <item name="android:textColor">@color/button_small_orange_text</item>
    </style>

    <!-- 指定大小的按钮，需同时指定background: button_adaptive_blue.xml -->
    <style name="Button.Adaptive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/button_small_textSize</item>
    </style>

    <style name="Button.Adaptive.Blue">
        <item name="android:background">@drawable/button_large_blue</item>
    </style>

    <style name="MoreItemRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_setting</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/vertical_margin</item>
        <item name="android:paddingRight">@dimen/vertical_margin</item>
    </style>

    <style name="MoreItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MoreItemArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ToggleButton" parent="Button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/bg_setting_toggle</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="FormControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:drawablePadding">@dimen/padding_base</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FormGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vertical_48dp</item>
        <item name="android:paddingLeft">@dimen/padding_primary</item>
        <item name="android:paddingRight">@dimen/padding_primary</item>
    </style>

    <style name="FormGroup.Click">
        <item name="android:background">@drawable/bg_listitem_click</item>
    </style>

    <style name="FormControlRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_theme</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="FormControlRight.Checked">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="EditTextDeleteIcon">
        <item name="android:layout_width">@dimen/edittext_delete_icon_width</item>
        <item name="android:layout_height">@dimen/edittext_delete_icon_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_delete_blue</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vertical_48dp</item>
        <item name="android:paddingLeft">@dimen/padding_base</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_lighter</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="IcsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:divider">@drawable/line_divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <style name="OrderLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_lighter</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">#FFE1E8EB</item>
    </style>

    <!-- Android Style -->
    <style name="MMTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">19dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MMButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mm_style_two_btn_text</item>
    </style>

    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:background">@drawable/btn_style_one</item>
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

</resources>
