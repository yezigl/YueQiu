<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff3dc6b6" />

            <stroke android:width="1dp" android:color="#ff8bddd4" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_small_padding" android:right="@dimen/button_small_padding" />

            <size android:height="@dimen/button_small_height" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />

            <stroke android:width="1dp" android:color="#ff8bddd4" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_small_padding" android:right="@dimen/button_small_padding" />

            <size android:height="@dimen/button_small_height" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />

            <stroke android:width="1dp" android:color="#ff8bddd4" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_small_padding" android:right="@dimen/button_small_padding" />

            <size android:height="@dimen/button_small_height" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff3dc6b6" />

            <stroke android:width="1dp" android:color="#ff8bddd4" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_small_padding" android:right="@dimen/button_small_padding" />

            <size android:height="@dimen/button_small_height" />
        </shape>
    </item>
    
</selector>
