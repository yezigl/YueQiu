<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_theme" />

            <stroke android:width="1dp" android:color="@color/bg_theme" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_large_padding" android:right="@dimen/button_large_padding" />

            <size android:height="@dimen/button_large_height" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_theme" />

            <stroke android:width="1dp" android:color="@color/bg_theme" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_large_padding" android:right="@dimen/button_large_padding" />

            <size android:height="@dimen/button_large_height" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff999999" />

            <stroke android:width="1dp" android:color="#ff999999" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_large_padding" android:right="@dimen/button_large_padding" />

            <size android:height="@dimen/button_large_height" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffd5d5d5" />

            <stroke android:width="1dp" android:color="#ffd5d5d5" />

            <corners android:radius="2dp" />

            <padding android:left="@dimen/button_large_padding" android:right="@dimen/button_large_padding" />

            <size android:height="@dimen/button_large_height" />
        </shape>
    </item>

</selector>
