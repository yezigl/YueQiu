<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ff3dc6b6" />

            <stroke android:width="1dp" android:color="#ff2bb8aa" />

            <corners android:radius="2dp" />

            <size android:height="@dimen/button_square_height" android:width="@dimen/button_square_height" />
            
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff2bb8aa" />

            <stroke android:width="1dp" android:color="#ff00a692" />

            <corners android:radius="2dp" />

            <size android:height="@dimen/button_square_height" android:width="@dimen/button_square_height" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffd5d5d5" />

            <stroke android:width="1dp" android:color="#ffd5d5d5" />

            <corners android:radius="2dp" />

            <size android:height="@dimen/button_square_height" android:width="@dimen/button_square_height" />
        </shape>
    </item>

</selector>